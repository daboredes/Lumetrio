//El comentario antes de la funcion ayuda a saber que hace.
function nombreCompleto(n, a){
    return n + ' ' + a //regresa la concatenacion de 2 elementos y un espacio
}
var nombre = input('Dime un nombre');
var apellido = input('Dime un apellido');

var respuesta = nombreCompleto(nombre, apellido); // Asi se llama a la funcion
output(respuesta);


//(y) es la variable=>lo que esta en () son varialbes.

function sumarDos(y) {
    return y + 2;
}

var resultado = sumarDos(4); //Cambia el valor de y por 4.
output(resultado);


//Esta funcion trae el primero elemento de un arreglo.
function primerElemento(arreglo) {
    return arreglo[0];
}

var nombres = [ 'Punku', 'Ana', 'Javier' ];
output(primerElemento(nombres));

// Multiplica un numero x2
function duplicar(y){
    return y * 2;
}
var numero = input('Ingresa un numero');
var cuenta = duplicar(numero);
output(cuenta);


//Funcion que arroja el area de un cuadrado
function areaCuadrado(x){
   return Math.pow(x, 2);

}
var lado = input('Ingresa la medida del lado del cuadrado');
var area = areaCuadrado(lado); // Lo que hace es que x toma el valor de lado y arroja lado^2
output(area);


//Funcion que arroja el perimetro de un circulo

function perimetroCirculo(radio){ //la variable o parametro puede tener cualquier nombre y SOLO funciona dentro de la funcion.
    return 2*Math.PI*radio;
}
var radio = input('Ingresa el radio del circulo');
var perimetro = perimetroCirculo(radio);
output(perimetro);
